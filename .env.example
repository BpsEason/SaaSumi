# Global Environment Variables for Docker Compose
# Copy this file to .env and modify as needed.

# --- App Settings ---
APP_NAME="White-label Inn SaaS"
APP_ENV=local
APP_KEY=

# Set APP_URL to the Nginx frontend port
APP_URL=http://localhost:8080

# --- Database (MySQL) ---
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=saas_central
DB_USERNAME=root
DB_PASSWORD=root_password # Same as MySQL root password

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- AI Recommendation Service ---
FASTAPI_RECOMMEND_URL=http://fastapi-recommend:8001

# --- LINE Notify (Replace with your own credentials) ---
# You need to register a service at https://notify-bot.line.me/my/
LINE_NOTIFY_CLIENT_ID=
LINE_NOTIFY_CLIENT_SECRET=
LINE_NOTIFY_REDIRECT_URI=http://localhost:8000/line-notify/redirect

# --- OpenSearch ---
OPENSEARCH_HOST=opensearch:9200
